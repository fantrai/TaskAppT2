<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource GreenBG}"/>
    </Style>

    <Style TargetType="Button" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{StaticResource MainUI}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontFamily" Value="Inter"/>
    </Style>

    <Style TargetType="Button" ApplyToDerivedTypes="True" x:Key="GreenColor">
        <Setter Property="TextColor" Value="{StaticResource MainUI}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource GreenUI}"/>
        <Setter Property="FontFamily" Value="Inter"/>
    </Style>

    <Style TargetType="Label" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{StaticResource MainUI}"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="FontFamily" Value="Inter"/>
    </Style>

    <Style TargetType="Entry" ApplyToDerivedTypes="True">
        <Setter Property="PlaceholderColor" Value="{StaticResource MainUI}"/>
        <Setter Property="TextColor" Value="{StaticResource MainUI}"/>
        <Setter Property="FontFamily" Value="Inter"/>
    </Style>

    <Style TargetType="Editor" ApplyToDerivedTypes="True">
        <Setter Property="PlaceholderColor" Value="{StaticResource GreenBG}"/>
        <Setter Property="TextColor" Value="{StaticResource GreenBG}"/>
        <Setter Property="FontFamily" Value="Inter"/>
    </Style>

    <Style TargetType="CollectionView" ApplyToDerivedTypes="True">
        <Setter Property="VerticalScrollBarVisibility" Value="Never"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Never"/>
    </Style>
</ResourceDictionary>
